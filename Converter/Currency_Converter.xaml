<Page x:Class="Converter.Currency_Converter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Converter"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="850"
      Title="Currency_Converter">

    <Grid Background="#2fc2df">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--<Grid Name="Navbar_Grid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="HomeButton_Grid">
                <Button Background="#7ad8eb" Foreground="White" BorderThickness="0, 0, 0, 3" BorderBrush="#f4cf5d" TextBlock.FontWeight="Bold" TextBlock.FontSize="20" MouseDown="HomeButton_MouseDown" Margin="0,0,0,10">Home</Button>
            </Grid>
            <Grid x:Name="CurrencyButton_Grid" Grid.Column="1">
                <Button Background="#7ad8eb" Foreground="White" BorderThickness="0, 0, 0, 3" BorderBrush="#f4cf5d" TextBlock.FontWeight="Bold" TextBlock.FontSize="20" MouseDown="AngleButton_MouseDown" Margin="0,0,0,10">Angle</Button>
            </Grid>
            <Grid x:Name="LengthButton_Grid" Grid.Column="2">
                <Button Background="#7ad8eb" Foreground="White" BorderThickness="0, 0, 0, 3" BorderBrush="#f4cf5d" TextBlock.FontWeight="Bold" TextBlock.FontSize="20" MouseDown="LengthButton_MouseDown" Margin="0,0,0,10">Length</Button>
            </Grid>
            <Grid x:Name="HexadecimalButton_Grid" Grid.Column="3">
                <Button Background="#7ad8eb" Foreground="White" BorderThickness="0, 0, 0, 3" BorderBrush="#f4cf5d" TextBlock.FontWeight="Bold" TextBlock.FontSize="20" MouseDown="HexadecimalButton_MouseDown" Margin="0,0,0,10">Hexadecimal</Button>
            </Grid>
            <Grid x:Name="TemperatureButton_Grid" Grid.Column="4">
                <Button Background="#7ad8eb" Foreground="White" BorderThickness="0, 0, 0, 3" BorderBrush="#f4cf5d" TextBlock.FontWeight="Bold" TextBlock.FontSize="20" MouseDown="TemperatureButton_MouseDown" Margin="0,0,0,10">Temperature</Button>
            </Grid>
            <Grid x:Name="WeightButton_Grid" Grid.Column="5">
                <Button Background="#7ad8eb" Foreground="White" BorderThickness="0, 0, 0, 3" BorderBrush="#f4cf5d" TextBlock.FontWeight="Bold" TextBlock.FontSize="20" MouseDown="WeightButton_MouseDown" Margin="0,0,0,10">Weight</Button>
            </Grid>-->
        <!--</Grid>-->
        <Grid x:Name="Menu_Place_Grid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="Menu_Grid" Grid.Row="1" Grid.Column="1" Background="#F9527a">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="Name_Grid">
                    <TextBlock Text="Currency Converter" TextAlignment="Center" TextBlock.FontWeight="Bold" TextBlock.FontSize="48" TextBlock.FontFamily="Arial" TextBlock.FontStretch="ExtraExpanded" Margin="0,15" Foreground="#f6f5f1"/>
                </Grid>
                <Grid x:Name="Converter_Place_Grid" Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="Row_Menu_1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="Input_Grid" Margin="8" TextBlock.FontSize="20">
                            <TextBox x:Name="Input_Field" PreviewTextInput="NumberValidation"></TextBox>
                        </Grid>
                        <Grid x:Name="Combobox_Input_Grid" Grid.Column="1" Margin="8" TextBlock.FontSize="20">
                            <ComboBox SelectionChanged="ComboBox_Input">
                                <ComboBoxItem Content="Euro" IsSelected="true"></ComboBoxItem>
                                <ComboBoxItem Content="US Dollar" IsSelected="false"></ComboBoxItem>
                                <ComboBoxItem Content="British Pound" IsSelected="false"></ComboBoxItem>
                                <ComboBoxItem Content="Canadian Dollar" IsSelected="false"></ComboBoxItem>
                                <ComboBoxItem Content="Australian Dollar" IsSelected="false"></ComboBoxItem>
                            </ComboBox>
                        </Grid>
                        <Grid x:Name="Result_Grid" Grid.Column="2" Margin="8" TextBlock.FontSize="20">
                            <TextBox x:Name="Result_Field"></TextBox>
                        </Grid>
                        <Grid x:Name="Combobox_Result_Grid" Grid.Column="3" Margin="8" TextBlock.FontSize="20">
                            <ComboBox x:Name="ComboBoxResult" SelectionChanged="ComboBox_Result">
                                <ComboBoxItem Content="Euro" IsSelected="True"></ComboBoxItem>
                                <ComboBoxItem Content="US Dollar" IsSelected="False"></ComboBoxItem>
                                <ComboBoxItem Content="British Pound" IsSelected="False"></ComboBoxItem>
                                <ComboBoxItem Content="Canadian Dollar" IsSelected="False"></ComboBoxItem>
                                <ComboBoxItem Content="Australian Dollar" IsSelected="False"></ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </Grid>
                    <Grid x:Name="Row_Menu_2" Grid.Row="1" Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4.5*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="4.5*"/>
                        </Grid.ColumnDefinitions>
                         <Grid x:Name="Value_Grid" Grid.Column="1">
                            <TextBox x:Name="Field_Value" Tag="Value"></TextBox>
                        </Grid>
                    </Grid>
                    <Grid x:Name="Row_Menu_3" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4.5*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="4.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="Button_Grid" Grid.Column="1" Margin="8">
                            <Button Background="#7ad8eb" Foreground="White" BorderThickness="0" TextBlock.FontWeight="Bold" TextBlock.FontSize="20" MouseDoubleClick="Button_MouseDoubleClick">Convert</Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
